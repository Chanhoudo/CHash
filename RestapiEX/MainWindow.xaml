<Window x:Class="RestApiClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="REST API Client" Height="450" Width="800">
    <Grid Margin="10">
        <TextBlock Text="Posts:" FontWeight="Bold" FontSize="16" />
        <Button Content="Fetch Posts" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,0,10,0"
                VerticalAlignment="Top" Click="FetchPostsButton_Click" />
        <DataGrid Name="PostsDataGrid" Margin="0,50,0,0" AutoGenerateColumns="True" />
    </Grid>
</Window>
