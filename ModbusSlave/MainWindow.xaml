<Window x:Class="ModbusClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modbus Client" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Modbus Client Messages" FontSize="16" Margin="0,0,0,10"/>
        <TextBox Name="MessageBox" Height="150" TextWrapping="Wrap" IsReadOnly="True"/>
        <Button Content="Read Data" Click="ReadDataButton_Click" Width="120" Height="30" />
    </StackPanel>
</Window>
