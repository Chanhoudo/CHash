<Window x:Class="ModbusServerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modbus Server" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Modbus Server Messages" FontSize="16" Margin="0,0,0,10"/>
        <TextBox Name="MessageBox" Height="150" TextWrapping="Wrap" IsReadOnly="True"/>
        <Button Content="Start Server" Click="StartServerButton_Click" Width="120" Height="30" />
    </StackPanel>
</Window>
